<h1>Listing meetings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Description</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.name %></td>
        <td><%= meeting.date %></td>
        <td><%= meeting.description %></td>
        <td><%= meeting.owner %></td>
        <td><%= link_to 'Show', meeting, class: "btn btn-default"  %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting) , class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meeting', new_meeting_path, class: "btn btn-primary" %>
